						li PHP
						li SASS/LESS
						li Laravel
						li Wordpress
						li Node.js, npm
						li Bootstrap, PureCSS
						li mySQL
						li Git(Hub)
						li Mailchimp
						li SCRUM
						li ...

				div.experiment.skills__list
					h4 Experimented with
					ul
						li Vue.js, AngularJS
						li KeystoneJS
						li PUG, Twig, Jade
						li BEM, SMACSS
						li Foundation
						li MongoDB
						li Backbone.js
						li Gulp, Grunt
						li Three.js
						li Socket.io
						li Drupal
						li ...				


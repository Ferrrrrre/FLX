extends ../layouts/default

	
mixin project(project)
		a(href="/project/" + project.slug)
			-	var classes = []
			each category in project.categories
				-	classes.push(category.key)

			div(class="pure-u-lg-1-4 pure-u-md-1-3 pure-u-sm-1-2 pure-u-1-1 item-container " + classes.join(" "))
				.item
					img(src=project.heroImage.url)


block content

	section.section.section__intro.font--white
		.background.background__intro
		.brand.center
			h1 Hi, I'm
				span.font--theme  Ferre
				<br> Digital Creative</br>
			h2 a jack of all trades with a liking for Design &amp; Front-end Development

	section.section.section__about
		div.pure-g
			div.about__me.pure-u-lg-1-3.pure-u-md-1-2.pure-u-sm-1-2.pure-u-xs-1-2.pure-u-1-1.eqHeight
				
			div.about__bio.pure-u-lg-1-3.pure-u-md-1-2.pure-u-sm-1-2.pure-u-xs-1-2.pure-u-1-1.eqHeight
				.about__bio__inner
					p 
						span.greeting Hello, <br>
						| I'm Ferre Lambert and I'm an Antwerp-based 'Digital Creative'. Going through life with a smile, I like to creatively solve problems with the tools at hand, both online as offline.
					p Do take a look at my work and do not hesitate to ask if what you wish, isn't displayed or what TV series I'm currently recommending.
					p.quote "Adventure is out there!"
					a(class="button" href="files/LambertFerre_CV.pdf" target="_blank") Check my resume (Dutch)

	section.section.section__skills.font--white
		.background.background__skills
		.skills__inner
			h3.title Skills
			div.skills__lists
